<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background_overlay2"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="285dp"
                    android:layout_height="166dp"
                    android:paddingLeft="22dp"
                    android:paddingTop="25dp"
                    android:src="@drawable/logo" />

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="135dp"
                    android:paddingLeft="5dp"
                    android:src="@drawable/marcia_3" >
                </ImageView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/label_contact" >
                </ImageView>
                <!--  -->
                <!-- <TextView -->
                <!-- android:layout_width="fill_parent" -->
                <!-- android:layout_height="wrap_content" -->
                <!-- android:gravity="center" -->
                <!-- android:paddingBottom="10dp" -->
                <!-- android:text="Talk With a Pro!" -->
                <!-- android:textColor="@android:color/black" -->
                <!-- android:textSize="20sp" -->
                <!-- android:textStyle="bold" > -->
                <!-- </TextView> -->

                <TextView
                    android:layout_width="458dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="28dp"
                    android:text="Registered dietitian Marcia Berlin, R.D., L.D. is available for online consultations via Skype or telephone."
                    android:textColor="#ff0000"
                    android:textSize="20sp"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:layout_width="455dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:onClick="email"
                    android:paddingBottom="5dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="28dp"
                    android:text="Arrange for your phone, video, or in-person consultation now."
                    android:textColor="@color/blue"
                    android:textSize="20sp"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:layout_width="462dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="28dp"
                    android:text="Note: Skype is a free online video-calling program. It requires a camera to use."
                    android:textColor="#ff0000"
                    android:textSize="20sp"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:layout_width="464dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:onClick="skype"
                    android:paddingBottom="10dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="28dp"
                    android:text="Sign up for Skype."
                    android:textColor="@color/blue"
                    android:textSize="20sp"
                    android:textStyle="bold" >
                </TextView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>