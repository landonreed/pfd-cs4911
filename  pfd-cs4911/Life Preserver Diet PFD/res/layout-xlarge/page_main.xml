<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_main"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="540dp"
        android:layout_height="344dp"
        android:paddingTop="38dp"
        android:src="@drawable/logo_2" >
    </ImageView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="20dp"
        android:weightSum="1" >

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:paddingRight="5dp"
            android:src="@drawable/icon_pfd" />

        <Button
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight=".7"
            android:background="@drawable/button_selector_white"
            android:onClick="personalFlotationDevice"
            android:padding="0dp"
            android:text="Personal Flotation Device"
            android:textSize="35sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="30dp"
        android:weightSum="1" >

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:paddingRight="5dp"
            android:src="@drawable/icon_history" >
        </ImageView>

        <Button
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight=".7"
            android:background="@drawable/button_selector_red"
            android:onClick="chartHistory"
            android:padding="0dp"
            android:text="Chart your History"
            android:textSize="35sp" >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="30dp"
        android:weightSum="1" >

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:paddingRight="5dp"
            android:src="@drawable/icon_about" >
        </ImageView>

        <Button
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight=".7"
            android:background="@drawable/button_selector_white"
            android:onClick="about"
            android:padding="0dp"
            android:text="About the Diet"
            android:textSize="35sp" >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="30dp"
        android:weightSum="1" >

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:paddingRight="5dp"
            android:src="@drawable/icon_book" >
        </ImageView>

        <Button
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight=".7"
            android:background="@drawable/button_selector_red"
            android:onClick="book"
            android:padding="0dp"
            android:text="Buy the Book"
            android:textSize="35sp" >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="30dp"
        android:weightSum="1" >

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:paddingRight="5dp"
            android:src="@drawable/icon_contact" >
        </ImageView>

        <Button
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight=".7"
            android:background="@drawable/button_selector_white"
            android:onClick="contact"
            android:padding="0dp"
            android:text="Contact Us"
            android:textSize="35sp" >
        </Button>
    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="test_database"
        android:text="Test Database"
        android:visibility="invisible" >
    </Button>

</LinearLayout>