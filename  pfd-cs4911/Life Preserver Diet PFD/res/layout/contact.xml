<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center" >

            <ImageView
                android:layout_width="250dp"
                android:layout_height="195dp"
                android:src="@drawable/marcia"
                android:padding="10dp" >
            </ImageView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Talk With a Pro!"
                android:paddingBottom="10dp" >
            </TextView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Registered dietitian Marcia Berlin, R.D., L.D. wants to help you get back to a happier, healthier you! She is available for online consultations via Skype or telephone." 
                android:paddingBottom="10dp" >
            </TextView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Your first 10-minute consultation is free! (Subsequent consultations are billed at $8 per 10 minutes, or $48 per hour.)" >
            </TextView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:clickable="true"
                android:onClick="email"
                android:text="Arrange for your phone or video consultation now." 
                android:paddingBottom="10dp" >
            </TextView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Note: Skype is a free online video calling program. You must sign up for Skype and have access to a web camera to use it." >
            </TextView> 

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:clickable="true"
                android:onClick="skype"
                android:text="Sign up for Skype." 
                android:paddingBottom="10dp" >
            </TextView>        
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>